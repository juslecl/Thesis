neg_llt <- function(beta, X, Y, df = 2) {
residuals <- Y - X %*% beta
n <- length(Y)
neg_ll <- -n * log(gamma((df + 1) / 2)) + n * log(gamma(df / 2)) + n * log(sqrt(df * pi)) +
((df + 1) / 2) * sum(log(1 + (residuals^2 / df)))
return(neg_ll)
}
